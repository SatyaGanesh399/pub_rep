{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@context/*": [
        "./src/context/*"
      ],
      "@lib/*": [
        "./src/styleguide/lib/*"
      ],
      "@styleguide/*": [
        "./src/styleguide/*"
      ],
      "@icons/*": [
        "./src/styleguide/icons/*"
      ],
      "@svg-resources/*": [
        "./src/styleguide/svg-resources/*"
      ],
      "@page-components/*": [
        "./src/styleguide/page-components/*"
      ]
    },
    "strictNullChecks": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "build/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
